<div class="main">
  <% if logged_in? %>
  <!-- log out button -->
    <form action="/session" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    </form>
  <% end %>
      <br>
      <br>
</div>


<div class="loginSignupButtons">
  <% if !logged_in? %>
    <a href="/login"><h2>Login</h2></a>
    <a href="/teachers/new"><h2>Signup</h2></a>
  <% end %>
</div>


<div class="secondmain">

<div class="information">
    <p>The Worm is a real-time audience sentiment feedback tool for the classroom <br> and other public speaking scenarios.<br>Sign up or log in to create and manage your presentations.<br>Or, if you've been sent a code, enter it below to start voting!</p>
</div>
   <div class="dashboardbutton">
    <% if logged_in? %>
    <p><a href="/teachers/<%=current_user.id%>">Go to my dashboard</a></p>
    </div>
    <% end %>
  <%= image_tag("worm_screenshot.png") %>
  <br>
  <br>

<form action="/presentations/check" method="get">

    <div class="information">
      <label>Received a code to join a presentation?</label>

</div>


  <input type="text" name="uuid" placeholder="code">
  <button>Join</button>
  </form>
    <%= flash[:notice] %>
  <br>

</div>


